{
  "name": "secretvault",
  "displayName": "SecretVault",
  "description": "Intelligent secrets management SaaS for no-coders and developers",
  "type": "service",
  "category": "frontend",
  "version": "1.0.0",
  "build": {
    "type": "dockerfile",
    "dockerfile": "Dockerfile",
    "context": ".",
    "buildArgs": {
      "NODE_ENV": "production"
    }
  },
  "deploy": {
    "replicas": {
      "min": 2,
      "max": 10,
      "target": 3
    },
    "resources": {
      "cpu": {
        "request": "200m",
        "limit": "1000m"
      },
      "memory": {
        "request": "256Mi",
        "limit": "1Gi"
      }
    },
    "healthCheck": {
      "path": "/",
      "port": 80,
      "initialDelaySeconds": 15,
      "periodSeconds": 10
    }
  },
  "networking": {
    "ports": [
      {
        "port": 80,
        "protocol": "http",
        "public": true
      }
    ],
    "domains": ["secretvault.app", "app.secretvault.app"]
  },
  "environment": {
    "NODE_ENV": "production",
    "VITE_APP_NAME": "SecretVault",
    "VITE_API_BASE_URL": "https://api.secretvault.app"
  },
  "secrets": [
    "VITE_AUTH0_DOMAIN",
    "VITE_AUTH0_CLIENT_ID",
    "VITE_STRIPE_PUBLISHABLE_KEY",
    "DOPPLER_TOKEN"
  ],
  "volumes": [],
  "labels": {
    "app": "secretvault",
    "version": "1.0.0",
    "environment": "production"
  }
}
